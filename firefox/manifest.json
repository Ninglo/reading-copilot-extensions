{
    "manifest_version": 2,
    "name": "reading-copilot",
    "version": "1.0",
    "description": "Use LLM help user reading.",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icons/beasts-32.png",
        "default_title": "Hello",
        "default_popup": "popup/index.html"
    },
    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Alt+Y"
            }
        }
    }
}